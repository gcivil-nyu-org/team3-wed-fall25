[flake8]
max-line-length = 130
extend-ignore = E203, W503
exclude = .git,__pycache__,env,venv,.venv,build,dist,migrations

# 디렉터리/파일별로만 필요한 규칙 완화
per-file-ignores =
  apps/*/admin.py:F401
  apps/*/models.py:F401
  apps/*/tests.py:F401
  apps/*/views.py:F401
  tests/*.py:F401

  # 데이터/크롤러는 긴 줄과 예외 최소화 허용
  crawlers/*.py:E501,E722,E731,F401,F841,E402

  # 공용 모델의 레거시 이름 경고 완화
  common/models/*.py:F401,F841,E741

  # 인프라 SQL 호출부: 긴 줄/공백 경고 일부 완화
  infrastructures/postgres/*.py:E501,W291,W293,F401